<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="./imgs/general_site_imgs/site-icon.png">
    <title>SPP GROUP</title>
    <link rel="stylesheet" href="./css/style.css">
    <script src="./js/app.js"></script>
</head>

<body>
    <header>
        <section id="fixed-to-top">
            <div class="brand-div">
                <a href="./">
                    <img src="./imgs/general_site_imgs/logo_Lab.png" alt="Lab Icon">
                    <div>
                        <p>Structure-Property-Processing Group</p>
                        <span>Materials Science Center, Indian Institute of Technology Kharagpur, India</span>
                    </div>
                </a>
            </div>
            <nav class="clear-both">
                <a href="./">Home</a>
                <a href="./members">Members</a>

                <div class="hide-this">
                    <a href="./members.html#Team">Team</a>
                    <a href="./members.html#Alumni">Alumni</a>
                </div>

                <a href="#" class="active" class="nav-dropdown">Research</a>

                <div>
                    <a href="#ongoing-work">Ongoing Work</a>
                    <a href="#featured-work">Featured Work</a>
                    <a href="#funding">Funding and Collaborators</a>
                </div>

                <a href="./facilities">Facilities</a>
                <a href="./refreshment">Refreshment</a>
                <a href="./contact">Contact</a>
            </nav>
        </section>

        <section class="clear-both non-home-body-top-sec" id="page-heading-sec">
            <h1>Research</h1>
        </section>
        <section class="body-sec" id="research-top-sec">
            <hr class="heading-hr hr-top">
            <h2><%= data[0]['intro']['title'] %></h2>
            <hr class="heading-hr hr-btm">
            <p>
                <%= data[0]['intro']['para_content'] %>
            </p>
        </section>
    </header>
    <section class="research-container">
        <section class="breadcrumb-research">
            <div class="sticky-navbar" id="research">
                <span class="sticky-navbar-slash">/</span>
                <a href="#page-heading-sec">Research</a>
            </div>
            <section class="research-mainpage">
                <div class="research-div">
                    <h3 class="subpage-heading">Research Interests</h3>
                    <ul>
                        <% data[0]['intro']['research_interests'].forEach( interest => { %>
                            <li><%= interest['interest'] %></li>
                        <% }) %>
                    </ul>
                </div>
                <div class="research-div hide-this">
                    <h3 class="subpage-heading">Research Insights</h3>
                    <div class="research-gallery" id="research-gallery">
                        <% data[0]['intro']['research_insights'].forEach( slide => { %>

                            <figure>
                                <img src="./imgs/research/research_gallery/<%= slide['img_url'] %>" alt="<%= slide['img_caption'] %>">
                                <figcaption>
                                    <%= slide['img_caption'] %>
                                </figcaption>
                            </figure>
                
                        <% }) %>


                    </div>
                </div>
            </section>
        </section>
        <section class="breadcrumb-ongoing" id="ongoing-work">
            <div class="sticky-navbar">
                <span class="sticky-navbar-slash">/</span>
                <a href="#page-heading-sec">Research</a>

                <span class="sticky-navbar-slash">/</span>
                <a href="#ongoing-work">Ongoing Work</a>
            </div>
            <section class="research-subpage">
                <h3>Ongoing Work</h3>

                <% data[3]['ongoing_work'].forEach( work => { %>

                    <div class="ongoing-work-div">
                        <h5><%= work['title'] %></h5>
                        <h6>(Members involved: <%= work['members_involved'] %>)</h6>
                        <p>
                            <%= work['para_content'] %>
                        </p>

                        <% work['img_url'].forEach( img => { %>
                            <img src="./imgs/research/ongoing_work/<%= work['ongoing_id'] %>/<%= img['url'] %>" alt="">
                        <% }) %>

                    </div>

                <% }) %>

            </section>
        </section>

        <section class="breadcrumb-featured" id="featured-work">
            <div class="sticky-navbar">
                <span class="sticky-navbar-slash">/</span>
                <a href="#page-heading-sec">Research</a>

                <span class="sticky-navbar-slash">/</span>
                <a href="#featured-work">Featured Work</a>
            </div>
            <section class="research-subpage">
                <h3>Featured Work</h3>
                <div class="featured-work-div">
                    <h4>Research Articles</h4>

                    <% data[1]['featured_work']['research_articles'].forEach( article => { %>
                        
                        <div class="research-article">
                            <a href="<%= article['article_link'] %>" target="_blank">
                                <div class="inside-a-article">
                                    <img src="./imgs/research/featured_work/<%= article['img_url'] %>" alt="Article <%= article['article_id'] %> Preview">
                                    <h5><%= article['title'] %></h5>
                                </div>
                            </a>
                        </div>


                    <% }) %>
                
                </div>
                <div class="featured-work-div">
                    <h4>Book Chapters</h4>

                    <% data[1]['featured_work']['book_chapters'].forEach( book => { %>
                        
                        <div class="featured-book">
                            <img src="./imgs/research/featured_work/<%= book['img_url'] %>" alt="<%= book['description'] %>">
                            <h5><%= book['title'] %></h5>
                        </div>

                    <% }) %>
                </div>
            </section>
        </section>
        <section class="breadcrumb-funding clear-both" id="funding">
            <div class="sticky-navbar">
                <span class="sticky-navbar-slash">/</span>
                <a href="#page-heading-sec">Research</a>

                <span class="sticky-navbar-slash">/</span>
                <a href="#funding">Funding and Collaborators</a>
            </div>

            <section class="research-subpage">
                <h3>Funding and Collaborators</h3>
                <div class="funding-div">
                    <h4>Current Projects</h4>

                    <% data[2]['funding_collaboration']['funding']['current_projects'].forEach( project => { %>

                        <div class="funded-project">
                            <blockquote>
                                <%= project['title'] %>
                            </blockquote>
                            <p>
                                Funding Agency: <%= project['funding_agency'] %>
                            </p>
                            <p>
                                Duration: <%= project['duration'] %>
                            </p>
                            <p>
                                Amount: <%= project['amount'] %> 
                            </p>
                        </div>

                    <% }) %>

                </div>
                <div class="funding-div">
                    <h4>Completed Projects</h4>

                    <% data[2]['funding_collaboration']['funding']['completed_projects'].forEach( project => { %>

                        <div class="funded-project">
                            <blockquote>
                                <%= project['title'] %>
                            </blockquote>
                            <p>
                                Funding Agency: <%= project['funding_agency'] %>
                            </p>
                            <p>
                                Duration: <%= project['duration'] %>
                            </p>
                            <p>
                                Amount: <%= project['amount'] %>
                            </p>
                        </div>

                    <% }) %>

                </div>
                <div class="funding-div">
                    <h4>Collaborators</h4>
                    <div class="collab-list">
                        <ul>
                            <% data[2]['funding_collaboration']['collaboration'].forEach( collab => { %>

                                <li><%= collab['collaborator'] %></li>

                            <% }) %>
                        </ul>
                    </div>
                </div>
            </section>
        </section>
    </section>
    <hr class="clear-both">
    <footer>
        &copy; 2021 by SPP GROUP
    </footer>
</body>

</html>