<h1>Admin Login</h1>

<a href="/admin/register" class="redirect-btn">Register</a>

<% if (messages.error) { %>
    <span>
        <%= messages.error %>
    </span>
    <% } %>

<form action="/admin/login" method="POST">
    <%- include('./_form_fields') %>
    <button type="submit" style="margin: 0 1%;" tabindex="3">Login</button>
</form>

<style>
    section {
        display: none;
    }

    img {
        display: none;
    }

    h1 {
        width: 100%;
        text-align: center;
        font-size: 2.5em;
        padding: 20px 0;
    }

    span {
        font-size: 1.3em;
        display: block;
        width: 50%;
        padding: 10px 0;
        margin: auto;
        text-align: center;
        color: black;
        background-color: #FFBABA;
        margin-bottom: 1%;
        border-radius: 2%;
    }

    form {
        display: block;
        width: 50%;
        margin: auto;
        text-align: center;
        background-color: lightskyblue;
        padding: 5% 0;
        border-radius: 5%;
    }

    form p {
        margin: 2% 0;
        font-size: 1.3em;
    }

    form input {
        padding: 10px;
        font-size: 1em;
        outline: none;
        border: none;
        margin-left: 20px;
        transition: all 0.3s;
        border-radius: 5px;
    }

    form input:focus {
        background-color: rgba(255, 255, 255, 0.788);
    }

    form a {
        font-size: 1.3em;
        display: inline-block;
        padding: 7px 10px;
        background-color: lightgray;
        cursor: pointer;
        text-decoration: none;
        color: black;
        border-radius: 10%;
        border: solid 1px black;
        transition: all 0.3s;
    }

    form a:hover {
        background-color: gray;
        text-decoration: underline;
    }

    form button {
        font-size: 1.3em;
        display: inline-block;
        padding: 7px 10px;
        background-color: lightgray;
        cursor: pointer;
        text-decoration: none;
        color: black;
        border-radius: 10%;
        border: solid 1px black;
        transition: all 0.3s;
    }

    form button:hover {
        background-color: gray;
        text-decoration: underline;
    }

    .redirect-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 1.3em;
        display: inline-block;
        padding: 7px 10px;
        background-color: lightgray;
        cursor: pointer;
        text-decoration: none;
        color: black;
        border-radius: 10%;
        border: solid 1px black;
        transition: all 0.3s;
    }

    .redirect-btn:hover {
        background-color: rgba(128, 128, 128, 0.726);
        text-decoration: underline;
    }
</style>